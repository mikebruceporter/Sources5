@model IEnumerable<ApplicationUser>
<div class="bg-primary m-1 p-1 text-white"><h4>User Accounts</h4></div>
<p>AdminController Index.cshtml</p>
<p><strong>The Id and login User Name cannot be edited. You can change the Email and Password only. Click the Edit button to change these.</strong></p>
<p>We have a <strong>cascade</strong> issue when trying to delete a user.</p>
<table class="table table-sm table-bordered">
    <thead><tr><th>Id</th><th>Login User Name</th><th>Email</th><th>Edit Delete</th></tr></thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach (ApplicationUser user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit"
                           asp-route-id="@user.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-action="CreateNewUser">Create</a>
